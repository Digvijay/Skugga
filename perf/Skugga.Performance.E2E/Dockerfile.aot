FROM mcr.microsoft.com/dotnet/sdk:9.0-alpine AS build
WORKDIR /src
COPY . .

# Install Native AOT prerequisites (Linker and ZLib)
RUN apk add --no-cache clang zlib-dev build-base

# Publish for Alpine (musl)
RUN dotnet publish src/Skugga.Performance.E2E.csproj -c Release -r linux-musl-x64 /p:PublishAot=true -o /app/publish

FROM mcr.microsoft.com/dotnet/runtime-deps:9.0-alpine
WORKDIR /app
COPY --from=build /app/publish .
ENTRYPOINT ["./Skugga.Performance.E2E"]