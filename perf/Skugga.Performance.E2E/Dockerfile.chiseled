FROM mcr.microsoft.com/dotnet/:9.0 AS build
WORKDIR /src
COPY . .

# Install Native AOT prerequisites for glibc (Debian/Ubuntu)
RUN apt-get update && apt-get install -y clang zlib1g-dev

# Publish for Linux (glibc)
RUN dotnet publish src/Skugga.Performance.E2E.csproj -c Release -r linux-x64 /p:PublishAot=true -o /app/publish

FROM mcr.microsoft.com/dotnet/runtime-deps:9.0-noble-chiseled
WORKDIR /app
COPY --from=build /app/publish .
ENTRYPOINT ["./Skugga.Performance.E2E"]